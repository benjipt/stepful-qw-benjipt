{
  "openapi": "3.0.1",
  "info": {
    "title": "API V1",
    "version": "v1"
  },
  "paths": {
    "/api/assignments/{assignmentId}/questions": {
      "get": {
        "summary": "Returns all assignment questions for a given assignment",
        "tags": [
          "AssignmentQuestions"
        ],
        "parameters": [
          {
            "name": "assignmentId",
            "in": "path",
            "description": "Assignment ID (camelCase)",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "questions found",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "questionId": {
                        "type": "integer"
                      },
                      "content": {
                        "type": "string"
                      },
                      "choices": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        },
                        "nullable": true
                      }
                    },
                    "required": [
                      "questionId",
                      "content",
                      "choices"
                    ]
                  }
                }
              }
            }
          },
          "404": {
            "description": "assignment not found"
          }
        }
      }
    },
    "/api/user_assignments": {
      "get": {
        "summary": "list user_assignments",
        "tags": [
          "UserAssignments"
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "query",
            "description": "User ID",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "assignmentId": {
                        "type": "integer"
                      },
                      "title": {
                        "type": "string"
                      },
                      "status": {
                        "type": "string"
                      },
                      "score": {
                        "type": "integer",
                        "nullable": true
                      },
                      "totalTimeSpent": {
                        "type": "integer",
                        "nullable": true,
                        "description": "Total time spent in seconds"
                      }
                    },
                    "required": [
                      "assignmentId",
                      "title",
                      "status"
                    ]
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/users": {
      "get": {
        "summary": "list users",
        "responses": {
          "200": {
            "description": "successful",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "integer"
                      },
                      "name": {
                        "type": "string"
                      },
                      "email": {
                        "type": "string"
                      }
                    },
                    "required": [
                      "id",
                      "name",
                      "email"
                    ]
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "servers": [
    {
      "url": "http://localhost:3000"
    }
  ]
}