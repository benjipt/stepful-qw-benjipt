{
  "name": "stepful-qw-benjipt",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev:fe": "cd frontend && vite",
    "dev:be": "cd backend && bin/rails server",
    "build": "cd frontend && tsc -b && vite build",
    "preview": "cd frontend && vite preview",
    "lint:fe": "cd frontend && bunx biome check --write src/",
    "lint:be": "cd backend && bin/rubocop -A",
    "test:be": "cd backend && bin/rails test",
    "generate:openapi:be": "cd backend && RAILS_ENV=test bin/rails rswag",
    "generate:openapi:fe": "bunx openapi-typescript ./backend/docs/api/v1/swagger.json -o ./frontend/src/types/api.d.ts",
    "generate:openapi": "bun generate:openapi:be && bun generate:openapi:fe",
    "check:types": "cd frontend && tsc --noEmit"
  },
  "dependencies": {
    "@radix-ui/react-radio-group": "^1.3.7",
    "@tailwindcss/vite": "^4.1.10",
    "@tanstack/react-query": "^5.80.7",
    "@tanstack/react-router": "^1.121.21",
    "@tanstack/react-router-devtools": "^1.121.21",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.517.0",
    "luxon": "^3.6.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^4.1.10"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@tanstack/router-plugin": "^1.121.22",
    "@types/luxon": "^3.6.2",
    "@types/node": "^24.0.3",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "globals": "^15.9.0",
    "lefthook": "^1.11.14",
    "openapi-typescript": "^7.8.0",
    "tw-animate-css": "^1.3.4",
    "typescript": "^5.5.3",
    "vite": "^5.4.1"
  }
}
